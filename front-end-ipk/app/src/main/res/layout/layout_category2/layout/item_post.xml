<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardPreventCornerOverlap="true"
    app:checkedIcon="@drawable/ic_like"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/transparent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/notification_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                app:srcCompat="@drawable/ic_offnoti">
            </androidx.appcompat.widget.AppCompatImageView>
            <androidx.cardview.widget.CardView
                android:id="@+id/post_profile_wrap"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="90dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/post_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_close"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/post_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tung Doan"
                android:layout_toRightOf="@+id/post_profile_wrap"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/allerta"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textFontWeight="20"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/post_profile_wrap"
                android:text="22 April"
                android:layout_below="@+id/post_name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/post_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_profile_wrap"
                android:text="He is smiling ..."
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/post_status"/>
            <ImageView
                android:id="@+id/post_image"
                android:layout_marginHorizontal="4dp"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_below="@id/post_status"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/post_numberOfLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_image"
                android:text="19"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />
            <TextView
                android:id="@+id/post_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_image"
                android:layout_marginTop="5dp"
                android:text="Likes"
                android:textSize="15dp"
                android:layout_toRightOf="@id/post_numberOfLike"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/post_numberOfComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_image"
                android:text="50"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/post_like"/>
            <TextView
                android:id="@+id/post_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_image"
                android:layout_marginTop="5dp"
                android:text=" Comments"
                android:textSize="15dp"
                android:layout_toRightOf="@id/post_numberOfComment"
                android:layout_marginLeft="5dp"/>
            <View
                android:id="@+id/post_viewBorder"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginVertical="4dp"
                android:layout_below="@id/post_comment"
                android:background="@android:color/darker_gray"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:layout_marginHorizontal="4dp"
                android:layout_below="@id/post_viewBorder"
                android:weightSum="8">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/like"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_like"
                    android:text="Like"
                    android:textColor="@color/black">

                </com.google.android.material.button.MaterialButton>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_comment"
                    android:text="Comment"
                    android:textColor="@color/black" />
            </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>
   </LinearLayout>
</com.google.android.material.card.MaterialCardView>
